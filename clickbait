#!/bin/dash
#the follow line has its flaws. A better solution would be ideal.
#. ~/.zshrc #dash does not support "source"
9menu $NINEFLAGS \
      Browse:"9browse.sh" \
      Window:'9menu $NINEFLAGS \
      	      Kill:~/.scripts/window/cwm/"winkill select" \
      	      Resize:~/.scripts/window/bspwm/windraw \
	      Select:"rofi -show \"combi\" -switchers combi -combi-modi \"window,drun,surf:surfrofi\" -show-icons"' \
      Plumb:"plumb --keybind" \
      Editor:"$VISUAL"\
      Programs:'9menu $NINEFLAGS \
      		        Browser:"$WEB" \
     			Music:"urxvt -e ncmpcpp" \
			Email:"$EMAIL" \
			Calculator:"env GTK_THEME=Adwaita:dark gnome-calculator"' \
      Tools:'9menu $NINEFLAGS \
      	  Pomo:"$HOME/.scripts/window/cwm/pomolaunch" \
	  To-do:"tdsel" \
	  Notes:"jsel" '  

