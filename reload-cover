#!/bin/dash

# load the cover art of the currently playing song

# the file currently playing
file="$MUSIC/$( mpc current -f '%file%' )"

if [ -f "$file" ]; then
    ffmpeg -i "$file" ~/.scripts/output/cover.jpg -y 2>/dev/null &&
	notify-send --icon="$HOME/.scripts/output/cover.jpg" "$(mpc status | sed q | sed 's/ - /\n/')"
    
fi
