#!/bin/bash
log="$HOME/.scripts/output/torrent.log"
rm $log
movies_dir="$HOME/Media/videos/movies"
magnet_file="$HOME/.scripts/input/magnets.txt"
cd $movies_dir
nordvpn connect >> $log && aria2c --seed-time=0 -i "$magnet_file" >> $log 
#add autocomment all lines at end
sed -i 's/^[A-z]/#&/' "$magnet_file"
nordvpn disconnect >> $log
